<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.datasource">jdbc-mysql</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.hbm2ddl.auto">verify</property>

        <mapping class="com.jako.moneytracker.db.entity.UserEntity"/>
        <mapping class="com.jako.moneytracker.db.entity.PaymentCategoryEntity"/>
        <mapping class="com.jako.moneytracker.db.entity.PaymentEntity"/>
    </session-factory>
</hibernate-configuration>